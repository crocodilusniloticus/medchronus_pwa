.orb-ring::after {
    content: ''; position: absolute; top: -4px; left: 50%; transform: translateX(-50%);
    width: 8px; height: 8px; background-color: var(--card-breath-accent);
    border-radius: 50%; box-shadow: 0 0 10px var(--card-breath-accent);
